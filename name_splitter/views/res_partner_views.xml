<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the partner form view to add first_name and last_name fields -->
        <record id="view_partner_form_inherit_name_splitter" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.name.splitter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="first_name" invisible="is_company" placeholder="First Name"/>
                    <field name="middle_name" invisible="is_company" placeholder="Middle Name"/>
                    <field name="last_name" invisible="is_company" placeholder="Last Name"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit the partner tree view to show first_name and last_name -->
        <record id="view_partner_tree_inherit_name_splitter" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit.name.splitter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='complete_name']" position="after">
                    <field name="first_name" optional="hide"/>
                    <field name="middle_name" optional="hide"/>
                    <field name="last_name" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
